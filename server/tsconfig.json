{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonJS",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "config/*": ["./src/config/*"],
            "const/*": ["./src/const/*"],
            "errors/*": ["./src/common/errors/*"],
            "hashOptions/*": ["./src/components/hashOptions/*"],
            "middlewares/*": ["./src/common/middlewares/*"],
            "root/*": ["./*"],
            "session/*": ["./src/components/session/*"],
            "types/*": ["./src/common/types/*"],
            "user/*": ["./src/components/user/*"],
            "utils/*": ["./src/common/utils/*"],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude" : [
        "types/",
        "node_modules"
    ]
}
{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonJS",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@common/*": ["./src/common/*"],
            "@config/*": ["./src/config/*"],
            "@const/*": ["./src/const/*"],
            "@hashOptions/*": ["./src/components/hashOptions/*"],
            "@root/*": ["./*"],
            "@session/*": ["./src/components/session/*"],
            "@user/*": ["./src/components/user/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude" : [
        "types/",
        "node_modules"
    ]
}